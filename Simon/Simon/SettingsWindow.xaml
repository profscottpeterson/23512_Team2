<Window x:Class="Simon.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simon"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="492,135,138.333,193.667">
            <Label FontWeight="Bold">Select Your Background</Label>
            <RadioButton x:Name="rdoWood" GroupName="ready" Checked="RadioButton_Checked">Wood</RadioButton>
            <RadioButton GroupName="ready">Granite</RadioButton>
            <RadioButton GroupName="ready" IsChecked="True">Outer Space</RadioButton>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="357,314,0,0" Click="Button_Click"/>
    </Grid>
</Window>
